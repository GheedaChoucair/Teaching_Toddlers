<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#7F171B" android:textColor = "@color/grey"/>
            <gradient android:angle="-90" android:startColor="#7F171B" android:textColor = "@color/grey" android:endColor="#7F171B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#7F171B" android:textColor = "@color/grey" />
            <solid android:color="#7F171B" android:textColor = "@color/grey" />

        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#7F171B" />
            <gradient android:angle="-90" android:startColor="#A6A6A6" android:endColor="#A6A6A6" />
        </shape>
    </item>
</selector>